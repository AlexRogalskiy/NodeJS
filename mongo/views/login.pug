#extends layout
block body
if(signupEmail)
  p Congrats
form(action="/login", method="POST")
  fieldset
    legend Log in
    p
      label Email
      input(name="user[email]", type="text", value=signupEmail)
    p
      label Password
      input(name="user[password]", type="password")
    p
      button Submit
    p
      a(href="/") Back